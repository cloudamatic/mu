---
  appname: "test"
  region: "us-east-1"
  servers: 
    - 
      name: "solr"
      iam-role: "demo-node"
      ssh_user: "ubuntu"
      platform: "ubuntu"
      vpc: 
        vpc_id: "vpc-db9e5dbe"
        subnet_name: "DEVELOPMENT-20140430181950-PriSubnet1"
        nat_host_name: "DEVELOPMENT-20140430181950-NAT1Instance"
<% if $environment == "development" then %>
      size: "t1.micro",
<% else %>
      size: "m3.large"
<% end %>
      run_list: 
        - "recipe[utility::git]"
      ingress_rules: 
        - 
          port: 8080
          hosts: 
            - "0.0.0.0/0"
      application_attributes: 
        application_volume: 
          volume_size_gb: 3
    - 
      name: "drupal"
      iam-role: "demo-node"
      vpc: 
        vpc_name: "DEVELOPMENT-20140430181950-VPC"
        subnet_id: "subnet-15e6e053"
        nat_host_name: "DEVELOPMENT-20140430181950-NAT2Instance"
      size: "m3.large"
      run_list: 
        - "recipe[utility::git]"
      ingress_rules: 
        - 
          port: 80
          hosts: 
            - "0.0.0.0/0"
        - 
          port: 443
          hosts: 
            - "0.0.0.0/0"
      add_firewall_rules: 
        - 
          rule_name: "MyCustomAdminSSH"
        - 
          rule_id: "sg-8cfa7be9"
  firewall_rules: 
    - 
      name: "MyCustomAdminSSH"
      vpc_name: "DEVELOPMENT-20140430181950-VPC"
      rules: 
        - 
          port: 22
          hosts: 
            - "23.30.31.61/32"
  admins: 
    - 
      name: "test1"
      email: "mail@example.com"

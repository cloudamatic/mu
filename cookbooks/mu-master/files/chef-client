#!/opt/chef/embedded/bin/ruby

#
# This file was generated by RubyGems.
#
# The application 'chef' is installed as part of a gem, and
# this file is here to facilitate running it.
#

require 'colorize'
warning = 'running chef-client as non-root user is not recomended'
user = `whoami`.chomp
puts warning.yellow unless user.eql? 'root'

require 'rubygems'

version = ">= 0"

if ARGV.first
  str = ARGV.first
  str = str.dup.force_encoding("BINARY") if str.respond_to? :force_encoding
  if str =~ /\A_(.*)_\z/ and Gem::Version.correct?($1) then
    version = $1
    ARGV.shift
  end
end

gem 'chef', version
load Gem.bin_path('chef', 'chef-client', version)

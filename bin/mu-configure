#done
  system("MU_INSTALLDIR=#{MU_BASE} MU_LIBDIR=#{MU_BASE}/lib MU_DATADIR=#{MU_BASE}/var #{MU_BASE}/lib/bin/mu-upload-chef-artifacts")
end

if $INITIALIZE
  MU.log "Force open key firewall holes", MU::NOTICE
